<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/popup">

        <RelativeLayout
            android:id="@+id/RelTimeChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/third">

            <TextView
                android:id="@+id/txtjamplh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserratbold"
                android:text="Jam"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <EditText
                android:id="@+id/edit_Jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtjamplh"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="90dp"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:fontFamily="@font/montserratlight"
                android:hint="@string/_0_23"
                android:inputType="number"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/fifth"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtmenitplh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_Jam"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserratbold"
                android:text="Menit"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtmenitplh"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="7dp"
                    android:checked="true"
                    android:fontFamily="@font/montserratlight"
                    android:scaleX="1.4"
                    android:scaleY="1.4"
                    android:text="00"
                    android:textColor="@color/secondary"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="7dp"
                    android:fontFamily="@font/montserratlight"
                    android:scaleX="1.4"
                    android:scaleY="1.4"
                    android:text="15"
                    android:textColor="@color/secondary"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="7dp"
                    android:fontFamily="@font/montserratlight"
                    android:scaleX="1.4"
                    android:scaleY="1.4"
                    android:text="30"
                    android:textColor="@color/secondary"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="7dp"
                    android:fontFamily="@font/montserratlight"
                    android:scaleX="1.4"
                    android:scaleY="1.4"
                    android:text="45"
                    android:textAlignment="gravity"
                    android:textColor="@color/secondary"
                    android:textSize="10sp" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/RelTimeChoose"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp">

            <Button
                android:id="@+id/button_save"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/fourth"
                android:fontFamily="@font/montserratsemibold"
                android:text="Save"
                android:textColor="@color/secondary" />

            <Button
                android:id="@+id/button_back"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/third"
                android:fontFamily="@font/montserratsemibold"
                android:text="Back"
                android:textColor="@color/secondary" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>